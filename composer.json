{
    "name": "enjin/php-blockchain-tools",
    "description": "Tools for handling hex numbers and decoding contract data.",
    "type": "library",
    "require": {
        "php": "^7.4 || ^8.0 || ^8.1",
        "kornrunner/keccak": "^1.0",
        "phpseclib/phpseclib": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "fzaninotto/faker": "dev-master",
        "symfony/var-dumper": "^6.0",
        "mockery/mockery": "^1.5",
        "nette/php-generator": "^v3.6"
    },
    "autoload": {
        "psr-4": {
            "Enjin\\BlockchainTools\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
