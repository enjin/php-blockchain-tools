{
    "name": "enjin/php-blockchain-tools",
    "description": "Tools for handling hex numbers and decoding contract data.",
    "type": "library",
    "require": {
        "php": ">=7.2",
        "kornrunner/keccak": "^1.0",
        "phpseclib/phpseclib": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "fzaninotto/faker": "^1.9",
        "symfony/var-dumper": "^5.1",
        "mockery/mockery": "^1.3",
        "nette/php-generator": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "Enjin\\BlockchainTools\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
